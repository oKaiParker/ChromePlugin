{
    // 清单文件的版本，这个必须写，而且必须是2
    "manifest_version": 3,
    // 插件的名称
    "name": "One-click Kittens",
    // 插件描述
    "description": "This extension demonstrates a browser action with kittens.",
    // 插件的版本
    "version": "1.0",
    // 权限申请
    "action": {
      "default_title": "鼠标移上去提示文字",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png"
    },
    "background":{
        "service_worker":"background.js"
    },
    "permissions":["storage"]
}